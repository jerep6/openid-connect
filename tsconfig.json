{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ],
    "moduleResolution": "node",
    "outDir": "build",
    "declaration": false,
    "noImplicitAny": false,
    "inlineSourceMap": true,
    "removeComments": true,
    "strictNullChecks": true,
    "typeRoots" : ["typings", "app-api/node_modules/@types"]
  },
  "include": [
    "app-api/app/**/*",
    "typings/**/*"
  ],
  "exclude": [
    ".idea",
    ".serverless",
    ".git",
    "node_modules"
  ]
}
